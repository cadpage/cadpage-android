<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:f="http://schemas.android.com/apk/res/net.anei.cadpage"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:minWidth="310dp"
  android:id="@+id/MainLinearLayout"
  android:layout_width="fill_parent">
  <include
    layout="@layout/popup_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
  <include
    layout="@layout/popup_divider" />
  <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:id="@+id/MessageScrollView"
    android:visibility="gone"
    android:layout_weight="1"
    android:paddingBottom="10dp"
    android:paddingTop="6dp">
    <TextView
      android:text="Text here"
      android:id="@+id/MessageTextView"
      android:autoLink="none"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="?android:attr/textColorPrimaryDisableOnly"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:gravity="center"
      android:paddingRight="10dp"
      android:paddingLeft="10dp"
      android:scrollbars="vertical" />
  </ScrollView>
  <ViewStub
    android:id="@+id/PrivacyViewStub"
    android:layout="@layout/popup_privacy"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
  <ImageButton android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:id="@+id/btnCallback" 
    android:gravity="center"
    android:background="@drawable/ic_callback_pop" 
    android:fadeScrollbars="false" 
    android:clickable="true"/>

  <net.anei.cadpage.widget.FlowLayout
    android:id="@+id/RegButtonLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    f:justify="fill"
    f:balance="true"
    f:horizontalSpacing="4dip"
    f:verticalSpacing="4dip"
    android:padding="4dp"/>
    
  <Button
    android:id="@+id/donate_status_button"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@drawable/status_background" 
    android:text=""/>
    
</LinearLayout>